{
    "name":"OpenMRN-lite",
    "description":"OpenMRN (Open Model Railroad Network) is a set of software libraries that are designed to make it easier to implement support for the NMRA's LCC (Layout Command Control) bus.",
    "keywords":"openlcb",
    "authors": [
        {
            "name":"Stuart Baker"
        },
        {
            "name":"Balazs Racz",
            "email": "balazs.racz@gmail.com",
            "maintainer": true
        }
    ],
    "repository": {
      "type": "git",
      "url": "https://github.com/bakerstu/openmrn"
    },
    "version": "1.0.0",
    "license": "BSD-2-Clause",
    "frameworks": "arduino",
    "platforms": "espressif32",
    "build": {
        "srcFilter" : [
            "-<.git/>",
            "-<examples/>",
            "+<*>",
            "+<dcc/*>",
            "+<executor/*>",
            "+<freertos/*>",
            "+<freertos_drivers/*>",
            "+<openlcb/*>",
            "+<os/*>",
            "+<sys/*>",
            "+<utils/*>"
        ],
        "libArchive" : true,
        "libLDFMode" : "chain+"
    }
  }
  
